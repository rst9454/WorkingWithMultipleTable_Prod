@*@model WorkingWithMultipleTable_Prod.Models.ViewModel.EmployeeDepartmentListViewModel*@
@model IEnumerable<WorkingWithMultipleTable_Prod.Models.ViewModel.EmployeeDepartmentSummaryViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-info text-center p-1 border border-dark">Employees Data</h1>
            <table class="table table-bordered text-center">
                <thead class="bg-dark text-light">
                    <tr>
                        <th>EmployeeId</th>
                        <th>First Name</th>
                        <th>Middle Name</th>
                        <th>Last Name</th>
                        <th>Gender</th>
                        <th>Department Name</th>
                        <th>Something</th>
                        <th>Department Code</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td>@d.EmployeeId</td>
                            <td>@d.FirstName</td>
                            <td>@d.MiddleName</td>
                            <td>@d.LastName</td>
                            <td>@d.Gender</td>
                            <td>@d.DepartmentName</td>
                            <td>@d.DepartmentCode</td>
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="" asp-controller="Employee" asp-route-id="@d.EmployeeId">Edit</a>
                                <a class="btn btn-sm btn-danger" asp-action="" asp-controller="Employee" asp-route-id="@d.EmployeeId">Delete</a>
                                <a class="btn btn-sm btn-warning" asp-action="" asp-controller="Employee" asp-route-id="@d.EmployeeId">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

